<div class="notice_page">
  <div class="notice-contents">
    <h1>공지사항 수정</h1>
    <form method="post" action="/editNotice">
      <input type="hidden" name="id" value="<%= row.id %>">
      <div>
        <label> 제목 : </label>
        <input class="noticeTitle" type="text" name="noticeTitle" value="<%= row.noticeTitle %>">
        <textarea name="noticeContents" rows="20" cols="82">
          <%= row.noticeContents %>
        </textarea>
      </div>
      <div class="form_Buttons">
        <input class="confirmBtn" type="submit" value="확인">
      </div>
    </form>
  </div>

</div>