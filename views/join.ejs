  <div class="join_page">
    <div class="join_popup">
      <div class="joinPage_img">
        <div class="logo_wrap">
          <div class="logo"><a href="/main"></a></div>
        </div>
      </div>
      <div class="joinPage_wrap">
        <div class="join_wrap">

          <form action="/join" class="joinForm" method="post" onsubmit="return checked()">
            <h1 class="join_Title">회원가입</h1>
            <table class="joinForm_inputBox">
              <tr class="form_room">
                <th>이름</th>
                <td>
                  <input class="join-input" type="text" name="userName" style="margin-top: 50px">
                </td>
              </tr>
              <tr class="form_room">
                <th>아이디</th>
                <td>
                  <input class="join-input" type="text" name="userId" onkeyup="check_id()" value="" minlength="4"
                    maxlength="20" size="15" pattern="[a-zA-Z0-9]{4,20}" title="4~20자의 영문 대소문자와 숫자로만 입력." required />
                  <!--patter으로 아이디 유효성 검사 minlength와 maxlength로 글자 수 제한-->
                  <br><span id="id_check_msg"></span>

                </td>
              </tr>
              <tr class="form_room">
                <th>비밀번호</th>
                <td>
                  <input class="join-input" type="password" id="my_pw" name="userPw" value="" minlength="4"
                    maxlength="12" size="15" pattern="[a-zA-Z0-9]{4,12}" title="4~12자의 영문 대소문자와 숫자로만 입력." required />
                  <!--patter으로 비밀번호 유효성 검사 minlength와 maxlength로 글자 수 제한-->
                </td>
              </tr>
              <tr class="form_room">
                <th>비밀번호 확인</th>
                <td>
                  <input class="join-input" type="password" id="my_pwCheck" name="userPwC" onkeyup="check_pw()" value=""
                    maxlength="12" size="15" required>
                  <br><span id="pw_check_msg"></span>
                </td>
              </tr>
              <tr class="form_room">
                <th>이메일</th>
                <td>
                  <input class="join-input" type="email" name="userMail" value=""
                    placeholder="ex) example@anthracite.com"
                    pattern="[A-Za-z0-9_]+[A-Za-z0-9]*[@]{1}[A-Za-z0-9]+[A-Za-z0-9]*[.]{1}[A-Za-z]{1,3}" required>
                </td>
              </tr>
              <tr class="form_room">
                <th>전화번호</th>
                <td>
                  <input class="join-input" type="tel" name="userNumber" pattern="[[0-9]{2,3}-[0-9]{3,4}-[0-9]{4}"
                    title="-를 포함하여 작성해주세요." required>
                </td>
              </tr>
              <tr class="form_room">
                <th>주소</th>
                <td>
                  <input type="text" id="postcode" placeholder="우편번호" readonly>
                  <input type="button" id="postcode_button" onclick="open_Postcode()" value="우편번호 찾기"><br>
                  <input type="text" id="road_adress" readonly>
                  <input class="join-input" type="text" id="detail_adress" placeholder="상세주소를 입력해주세요."
                    style="margin-bottom: 50px"><br>
                </td>
              </tr>
            </table>
            <div class="join_completeBtn">
              <input type="submit" value="확인">
            </div>
          </form>
          <div>
            <div class="joinPage_logo">
              <div class="joinlogo_bk"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="http://dmaps.daum.net/map_js_init/postcode.v2.js"></script>
  <script src="js/join.js"></script>